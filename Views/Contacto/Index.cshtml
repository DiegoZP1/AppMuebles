  
  
  
  @model AppMuebles.Models.Contacto; 
  
  
  
  
  
  
  
  
  
  <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
      <div class="container" data-aos="fade-up">

        <div class="section-title">
          <h2>Contactanos</h2>
        </div>

        <div class="row mt-1 d-flex justify-content-end" data-aos="fade-right" data-aos-delay="100">

          <div class="col-lg-5">
            <div class="info">
              <div class="address">
                <i class="bi bi-geo-alt"></i>
                <h4>Locacion</h4>
                <p>Lima , Peru</p>
                <p> Calle Los girasoles 240</p>
              </div>

              <div class="email">
                <i class="bi bi-envelope"></i>
                <h4>Email:</h4>
                <p>TEAM@muebles.com</p>
                <p>Envianos tus reclamos</p>
              </div>

              <div class="phone">
                <i class="bi bi-phone"></i>
                <h4>Telefono</h4>
                <p>(+51 )99887722310</p>
                <p>Lun - Dom (10 am-6 pm)</p>
              </div>

            </div>

          </div>

          <div class="col-lg-6 mt-5 mt-lg-0" data-aos="fade-left" data-aos-delay="100">

            <form asp-controller="Contacto" asp-action="Create">
             <div class="form-floating mb-3">
        <label asp-for="Nombre" class="form-label"> </label> 
        <input asp-for="Nombre" type="text" class="form-control form-control-sm" placeholder="" />
        </div>
        
        <div class="form-floating mb-3">
        <label asp-for="Email" class="control-label"> </label>
        <input asp-for="Email"  class="form-control" placeholder="" />
        </div>
        <div class="form-floating mb-3">
        <label asp-for="Asunto" class="control-label"> </label>
        <input asp-for="Asunto" class="form-control" />
        </div>
        <div class="form-floating mb-3">
        <label asp-for="Mensaje" class="control-label"> </label>
        <input asp-for="Mensaje" class="form-control" />
        </div>
        <div class="form-group">
            <div class="d-grid"><button type="submit" class="btn btn-primary btn-xl ">Enviar</button></div>
        </div>
            </form>

          </div>

        </div>

      </div>
    </section><!-- End Contact Section -->