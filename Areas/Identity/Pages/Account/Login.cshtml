@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}





<div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card border-0 shadow rounded-3 my-5">
          <div class="card-body p-4 p-sm-5">
            <h5 class="card-title text-center mb-5 fw-light fs-5">Iniciar Sesion</h5>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <div class="form-floating mb-3" >
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
              </div>
              <div class="form-floating mb-3">
               <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.Password" class="form-label"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
              </div>

              <div class="form-check mb-3">
                <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
              </div>
                <p style="text-align: right;" >
                        <a id="forgot-password" asp-page="./ForgotPassword">Olvidaste tu contraseña?</a>
                </p>
              <div class="d-grid mb-2">
                <button id="login-submit" class="btn btn-outline-primary btn-login text-uppercase fw-bold" type="submit">Ingresar</button>
              </div>

             <div>
                    
             <div class="d-grid mb-2">
                <a  class=" fw-light btn btn-outline-danger btn-login text-uppercase fw-bold fab fa-google " asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Crearse Una cuenta</a>
             </div>

                    <p style="text-align: center;">
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar correo electronico de confirmacion</a>
                    </p>
                </div>


              <hr class="my-4">


            </form>
          </div>
        </div>
      </div>
    </div>
  </div>


  <style>
    body {
  background: #D6DBDF ;

  <!--fondo-->
  background: #F7F9F9  ;
    }

    .btn-login {
    font-size: 0.9rem;
     letter-spacing: 0.05rem;
    padding: 0.75rem 1rem;
    }

    .btn-google {
     color: white !important;
    background-color: #ea4335;
    }

    
  </style>






























@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
